<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".OrderTrackingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Theo Dõi Đơn Hàng"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/order_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái đơn hàng của bạn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/order_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:drawableStart="@drawable/receipt_24px"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                tools:text="Mã đơn hàng: SO-250918-164701-382" />

            <TextView
                android:id="@+id/payment_method_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:drawableStart="@drawable/credit_card_24px"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                tools:text="Thanh toán: Tiền mặt" />

            <!-- Đổi icon và text status để hiển thị trạng thái thanh toán -->
            <TextView
                android:id="@+id/payment_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:drawableStart="@drawable/circle_24px"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                tools:text="Trạng thái: Đã thanh toán" />

            <!-- Đổi icon và text status để hiển thị trạng thái đơn hàng chung -->
            <TextView
                android:id="@+id/order_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:drawableStart="@drawable/circle_24px"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Trạng thái: Đang chuẩn bị" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timeline_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/order_info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiến trình đơn hàng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:layout_marginBottom="16dp"/>

            <!-- Đã đặt hàng -->
            <LinearLayout
                android:id="@+id/placed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/placed_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/done_all_24px"
                    app:tint="@color/green" />
                <View
                    android:id="@+id/line_placed_cooking"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:background="@color/green"
                    android:layout_marginStart="11dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã đặt hàng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark"/>
                    <TextView
                        android:id="@+id/placed_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        tools:text="16:45:00, 18/09/2025"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Đang nấu ăn -->
            <LinearLayout
                android:id="@+id/cooking_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/cooking_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/heat_24px"
                    app:tint="@color/gray" />
                <View
                    android:id="@+id/line_cooking_ready"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:background="@color/gray"
                    android:layout_marginStart="11dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang nấu ăn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/cooking_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        tools:text="Chưa bắt đầu"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Đã sẵn sàng -->
            <LinearLayout
                android:id="@+id/ready_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/ready_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/restaurant_24px"
                    app:tint="@color/gray" />
                <View
                    android:id="@+id/line_ready_served"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:background="@color/gray"
                    android:layout_marginStart="11dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã sẵn sàng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/ready_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        tools:text="Chưa sẵn sàng"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Đã phục vụ -->
            <LinearLayout
                android:id="@+id/served_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/served_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/restaurant_24px"
                    app:tint="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã phục vụ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/served_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        tools:text="Chưa phục vụ"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

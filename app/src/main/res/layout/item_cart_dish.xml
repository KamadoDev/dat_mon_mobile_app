<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cart_item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/avatars"
            android:contentDescription="Hình ảnh món ăn" />

        <Space
            android:id="@+id/horizontal_spacer"
            android:layout_width="16dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/cart_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/remove_item_button"
            app:layout_constraintStart_toEndOf="@id/horizontal_spacer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tên món ăn" />

        <TextView
            android:id="@+id/cart_item_toppings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_italic"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/cart_item_total_price"
            app:layout_constraintStart_toEndOf="@id/horizontal_spacer"
            app:layout_constraintTop_toBottomOf="@id/cart_item_name"
            tools:text="+ Topping 1, + Topping 2" />

        <TextView
            android:id="@+id/cart_item_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/edit_24px"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto_italic"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/cart_item_total_price"
            app:layout_constraintStart_toEndOf="@id/horizontal_spacer"
            app:layout_constraintTop_toBottomOf="@id/cart_item_toppings"
            tools:text="Không hành lá, ít cay" />

        <ImageButton
            android:id="@+id/remove_item_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xóa món ăn khỏi giỏ hàng"
            android:src="@drawable/delete_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/horizontal_spacer"
            app:layout_constraintTop_toBottomOf="@id/cart_item_note">

            <ImageButton
                android:id="@+id/decrement_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Giảm số lượng"
                android:src="@drawable/remove_24px"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/roboto_bold"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/increment_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Tăng số lượng"
                android:src="@drawable/add_24px"
                app:tint="@color/primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/cart_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/quantity_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/quantity_layout"
            tools:text="50.000đ" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
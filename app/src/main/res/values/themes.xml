<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="Base.Theme.Adr_doan_smart_order_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu primary -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background và surface nên dùng android: -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/secondary</item>
    </style>

    <!-- App theme -->
    <style name="Theme.Adr_doan_smart_order_app" parent="Base.Theme.Adr_doan_smart_order_app" />

    <!-- AppBar overlay -->
    <style name="Theme.Adr_doan_smart_order_app.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <!-- Popup overlay -->
    <style name="Theme.Adr_doan_smart_order_app.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Custom dialog -->
    <style name="OverlayDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <!-- Nền cửa sổ trong suốt để tự set màu overlay -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Quan trọng: tắt floating để không bị giới hạn width -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Loại bỏ giới hạn minWidth -->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <!-- Full screen dialog -->
    <style name="FullScreenDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
